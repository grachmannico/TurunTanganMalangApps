<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nicko.turuntanganmalangapps.activities.DonasiActivity">

    <TextView
        android:id="@+id/txt_donasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_favorite_red"
        android:gravity="center"
        android:text="Donasi"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_nominal_donasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/reddarkflat"
        android:gravity="center"
        android:hint="masukkan nominal donasi"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/btn_donasi_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/reddarkflat"
        android:drawableLeft="@drawable/ic_favorite"
        android:drawablePadding="5dp"
        android:text="Donasi Sekarang"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_header_rekening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Donasi Ke Rekening:"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_no_rekening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0319845686 (BNI)"
        android:textSize="30sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_an"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="a.n. Djafar Ravensky"
        android:textAlignment="center"
        android:textSize="15sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_daftar_konfirmasi_donasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/reddarkflat"
        android:text="Lihat Daftar Konfirmasi Donasi"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>
